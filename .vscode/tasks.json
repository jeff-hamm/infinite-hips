{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🚀 Deploy to GitHub Pages",
      "type": "shell",
      "command": "pwsh",
      "args": ["-File", "./deploy.ps1"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "🌐 Start Local Server",
      "type": "shell",
      "command": "python",
      "args": ["-m", "http.server", "8000"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "🔍 Check Color Scheme",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-Command",
        "Write-Host 'Checking for unapproved colors...' -ForegroundColor Yellow; Get-ChildItem -Recurse -Include '*.html','*.css' | Select-String -Pattern '#28a745|#20c997|#ff007a|#ff1a8c' | Format-Table -Property Filename,LineNumber,Line -Wrap"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "📱 Test Mobile Layout",
      "type": "shell",
      "command": "start",
      "args": ["http://localhost:8000"],
      "group": "test",
      "dependsOn": "🌐 Start Local Server",
      "presentation": {
        "echo": true,
        "reveal": "silent"
      }
    },
    {
      "label": "📝 Git Commit All Changes",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-Command",
        "git add .; $msg = Read-Host 'Commit message'; git commit -m $msg; git push origin master"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
